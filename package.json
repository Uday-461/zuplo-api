{
  "name": "zuplo-api-monorepo",
  "private": true,
  "workspaces": [
    "packages/api",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w packages/api\" \"npm run dev -w packages/frontend\"",
    "dev:api": "npm run dev -w packages/api",
    "dev:frontend": "npm run dev -w packages/frontend",
    "build": "npm run build -w packages/frontend",
    "start:api": "npm run start -w packages/api",
    "start:frontend": "npm run start -w packages/frontend",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

